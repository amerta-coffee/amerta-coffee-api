{
  "name": "amerta-coffee-api",
  "description": "API for Amerta Coffee, a premium Indonesian coffee online store",
  "version": "1.1.0",
  "scripts": {
    "format": "bunx prettier --write 'src/**/*.{ts,tsx}'",
    "db:migrate:dev": "prisma migrate dev --name init",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate --no-hints",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "dev": "bun run --hot src/app.ts",
    "start": "bun run src/app.ts"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.16.4",
    "@node-rs/argon2-darwin-arm64": "^2.0.2",
    "@node-rs/argon2-wasm32-wasi": "^2.0.2",
    "@node-rs/bcrypt-darwin-arm64": "^1.10.7",
    "@prisma/client": "^6.0.1",
    "@scalar/hono-api-reference": "^0.5.163",
    "date-fns": "^4.1.0",
    "hono": "^4.6.13",
    "nanoid": "^5.0.9",
    "oslo": "^1.2.1",
    "ua-parser-js": "^2.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bun": "latest",
    "prisma": "^6.0.1"
  },
  "author": "Zacky Achmad",
  "license": "MIT"
}
